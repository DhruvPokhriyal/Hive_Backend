# =============================================================================
# HIVE BACKEND - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# 
# This file contains all environment variables for the Hive Backend application.
# Copy this file to .env and replace the dummy values with your actual configuration values.
# 
# IMPORTANT: Never commit the actual .env file to version control in production!
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Hive Backend
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=True

# =============================================================================
# SUPABASE CONFIGURATION (Database & Auth)
# =============================================================================
# Get these values from your Supabase project dashboard
# Project URL: https://your-project.supabase.co
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# GEMINI API CONFIGURATION (RAG Pipeline)
# =============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_EMBED_MODEL=models/embedding-001
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.7

# =============================================================================
# VECTOR DATABASE (ChromaDB)
# =============================================================================
# Path where Chroma will persist its data (directory will be created if missing)
CHROMA_PERSIST_PATH=.chroma
# Name of the collection used for verification documents
CHROMA_COLLECTION=verification_docs

# =============================================================================
# WEB SCRAPING CONFIGURATION
# =============================================================================
SCRAPING_DELAY=1
SCRAPING_TIMEOUT=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
MAX_CONCURRENT_SCRAPES=5

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# News API: https://newsapi.org/
NEWS_API_KEY=your-news-api-key-here

# Fact Check API (example - replace with actual service)
FACT_CHECK_API_KEY=your-fact-check-api-key-here



# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/hive_backend.log

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,doc,docx

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# For Gmail, you'll need to generate an App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=noreply@hive.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ENABLED=True

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment and modify these for development-specific settings
# DATABASE_URL=postgresql://user:password@localhost:5432/hive_dev
# LOG_LEVEL=DEBUG
